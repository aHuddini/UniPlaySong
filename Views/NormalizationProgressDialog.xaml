<UserControl x:Class="UniPlaySong.Views.NormalizationProgressDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
             d:DesignHeight="400" d:DesignWidth="600"
             Focusable="True">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <materialDesign:BundledTheme BaseTheme="Dark" PrimaryColor="DeepPurple" SecondaryColor="Lime" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Defaults.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <Border Background="#1E1E1E" 
            BorderBrush="#424242" 
            BorderThickness="2" 
            CornerRadius="8" 
            Margin="8">
        <Grid Margin="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>  <!-- Title -->
                <RowDefinition Height="Auto"/>  <!-- Current File -->
                <RowDefinition Height="Auto"/>  <!-- Progress Bar -->
                <RowDefinition Height="*"/>     <!-- Status Messages -->
                <RowDefinition Height="Auto"/>  <!-- Cancel Button -->
            </Grid.RowDefinitions>

            <!-- Title -->
            <TextBlock Grid.Row="0" 
                       Text="ðŸ”§ Normalizing Audio Files" 
                       FontSize="20" 
                       FontWeight="Bold" 
                       Margin="0,0,0,16" 
                       HorizontalAlignment="Center"
                       Foreground="#2196F3"/>

            <!-- Current File -->
            <Border Grid.Row="1" 
                    Background="#E3F2FD" 
                    BorderBrush="#2196F3" 
                    BorderThickness="2" 
                    CornerRadius="8" 
                    Padding="12,8"
                    Margin="0,0,0,16">
                <StackPanel>
                    <TextBlock Name="CurrentFileText"
                               Text="Preparing..."
                               FontSize="14"
                               FontWeight="SemiBold"
                               Foreground="#1976D2"
                               TextWrapping="Wrap"/>
                    <TextBlock Name="StatusText"
                               Text="Initializing normalization..."
                               FontSize="12"
                               Foreground="#1976D2"
                               Margin="0,4,0,0"
                               TextWrapping="Wrap"/>
                </StackPanel>
            </Border>

            <!-- Progress Bar -->
            <StackPanel Grid.Row="2" Margin="0,0,0,16">
                <ProgressBar Name="ProgressBar"
                             Minimum="0"
                             Maximum="100"
                             Value="0"
                             Height="30"
                             Margin="0,0,0,8"/>
                <TextBlock Name="ProgressText"
                           Text="Preparing..."
                           HorizontalAlignment="Center"
                           FontSize="12"
                           Foreground="Gray"/>
            </StackPanel>

            <!-- Status Messages -->
            <ScrollViewer Grid.Row="3"
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled"
                          Margin="0,0,0,16"
                          MaxHeight="150">
                <ItemsControl Name="StatusMessages">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}" 
                                       FontSize="11" 
                                       Foreground="LightGray" 
                                       Margin="0,2"
                                       TextWrapping="Wrap"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <!-- Cancel Button -->
            <Button Grid.Row="4"
                    Name="CancelButton"
                    Content="Cancel"
                    Width="150"
                    Height="40"
                    HorizontalAlignment="Center"
                    Click="CancelButton_Click"
                    Style="{StaticResource MaterialDesignRaisedButton}"/>
        </Grid>
    </Border>
</UserControl>