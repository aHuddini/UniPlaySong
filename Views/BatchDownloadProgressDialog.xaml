<UserControl x:Class="UniPlaySong.Views.BatchDownloadProgressDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="850"
             Focusable="True">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <materialDesign:BundledTheme BaseTheme="Dark" PrimaryColor="DeepPurple" SecondaryColor="Lime" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Defaults.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Border Background="#1E1E1E"
            BorderBrush="#424242"
            BorderThickness="2"
            CornerRadius="8"
            Margin="8">
        <Grid Margin="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>  <!-- Title -->
                <RowDefinition Height="Auto"/>  <!-- Overall Progress -->
                <RowDefinition Height="Auto"/>  <!-- Statistics -->
                <RowDefinition Height="*"/>     <!-- Game List -->
                <RowDefinition Height="Auto"/>  <!-- Cancel Button -->
            </Grid.RowDefinitions>

            <!-- Title -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,16">
                <TextBlock Text="Auto Downloads"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="#2196F3"/>
                <Border Name="ReviewModeBadge"
                        Background="#E67E00"
                        CornerRadius="4"
                        Padding="8,4"
                        Margin="12,0,0,0"
                        VerticalAlignment="Center"
                        Visibility="Collapsed">
                    <TextBlock Text="REVIEW MODE"
                               FontSize="12"
                               FontWeight="Bold"
                               Foreground="White"/>
                </Border>
            </StackPanel>

            <!-- Overall Progress -->
            <StackPanel Grid.Row="1" Margin="0,0,0,16">
                <ProgressBar Name="OverallProgressBar"
                             Minimum="0"
                             Maximum="100"
                             Value="0"
                             Height="30"
                             Margin="0,0,0,8"/>
                <TextBlock Name="OverallProgressText"
                           Text="0 / 0 games"
                           HorizontalAlignment="Center"
                           FontSize="12"
                           Foreground="Gray"/>
            </StackPanel>

            <!-- Statistics -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,16">
                <Border Background="#E8F5E8"
                        BorderBrush="#4CAF50"
                        BorderThickness="1"
                        CornerRadius="4"
                        Padding="12,6"
                        Margin="4">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Check" VerticalAlignment="Center" Foreground="#2E7D32" Margin="0,0,4,0"/>
                        <TextBlock Text="Downloaded: " FontWeight="SemiBold" Foreground="#2E7D32"/>
                        <TextBlock Name="DownloadedCountText" Text="0" FontWeight="Bold" Foreground="#1B5E20"/>
                    </StackPanel>
                </Border>

                <Border Background="#FFF3E0"
                        BorderBrush="#FF9800"
                        BorderThickness="1"
                        CornerRadius="4"
                        Padding="12,6"
                        Margin="4">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="ArrowRightBold" VerticalAlignment="Center" Foreground="#E65100" Margin="0,0,4,0"/>
                        <TextBlock Text="Skipped: " FontWeight="SemiBold" Foreground="#E65100"/>
                        <TextBlock Name="SkippedCountText" Text="0" FontWeight="Bold" Foreground="#BF360C"/>
                    </StackPanel>
                </Border>

                <Border Background="#FFEBEE"
                        BorderBrush="#F44336"
                        BorderThickness="1"
                        CornerRadius="4"
                        Padding="12,6"
                        Margin="4">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Close" VerticalAlignment="Center" Foreground="#C62828" Margin="0,0,4,0"/>
                        <TextBlock Text="Failed: " FontWeight="SemiBold" Foreground="#C62828"/>
                        <TextBlock Name="FailedCountText" Text="0" FontWeight="Bold" Foreground="#B71C1C"/>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- Game List -->
            <Border Grid.Row="3"
                    Background="#252525"
                    BorderBrush="#333333"
                    BorderThickness="1"
                    CornerRadius="4"
                    Margin="0,0,0,16">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Column Headers -->
                    <Border Grid.Row="0" Background="#1A1A1A" Padding="12,6">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="24"/>   <!-- Status icon -->
                                <ColumnDefinition Width="70"/>   <!-- Library -->
                                <ColumnDefinition Width="*"/>    <!-- Game name -->
                                <ColumnDefinition Width="280"/>  <!-- Album -->
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="1" Text="Library" FontSize="11" FontWeight="SemiBold" Foreground="#888888" HorizontalAlignment="Center"/>
                            <TextBlock Grid.Column="2" Text="Game" FontSize="11" FontWeight="SemiBold" Foreground="#888888" Margin="8,0,0,0"/>
                            <TextBlock Grid.Column="3" Text="Album" FontSize="11" FontWeight="SemiBold" Foreground="#888888"/>
                        </Grid>
                    </Border>

                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                        <ItemsControl Name="GamesList">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border x:Name="ItemBorder"
                                            Background="#2D2D2D"
                                            BorderBrush="#3D3D3D"
                                            BorderThickness="0,0,0,1"
                                            Padding="12,8"
                                            MouseLeftButtonUp="GameItem_Click"
                                            Cursor="Arrow">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#3A3A3A"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="24"/>   <!-- Status icon -->
                                                <ColumnDefinition Width="70"/>   <!-- Library -->
                                                <ColumnDefinition Width="*"/>    <!-- Game name -->
                                                <ColumnDefinition Width="280"/>  <!-- Album -->
                                            </Grid.ColumnDefinitions>

                                            <!-- Status Icon -->
                                            <materialDesign:PackIcon Grid.Column="0"
                                                                     Kind="{Binding StatusIcon}"
                                                                     Foreground="{Binding StatusColor}"
                                                                     VerticalAlignment="Center"
                                                                     Width="20"
                                                                     Height="20"/>

                                            <!-- Library Name -->
                                            <TextBlock Grid.Column="1"
                                                       Text="{Binding LibraryName}"
                                                       FontSize="11"
                                                       Foreground="#9575CD"
                                                       VerticalAlignment="Center"
                                                       HorizontalAlignment="Center"
                                                       TextTrimming="CharacterEllipsis"/>

                                            <!-- Game Info -->
                                            <StackPanel Grid.Column="2" Margin="8,0">
                                                <TextBlock Text="{Binding GameName}"
                                                           FontSize="13"
                                                           FontWeight="SemiBold"
                                                           Foreground="White"
                                                           TextTrimming="CharacterEllipsis"/>
                                                <TextBlock Text="{Binding StatusMessage}"
                                                           FontSize="11"
                                                           Foreground="{Binding StatusMessageColor}"
                                                           FontWeight="{Binding StatusMessageFontWeight}"
                                                           TextTrimming="CharacterEllipsis"/>
                                            </StackPanel>

                                            <!-- Source and Album Name -->
                                            <StackPanel Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding SourceName}"
                                                           FontSize="10"
                                                           Foreground="#64B5F6"
                                                           FontWeight="SemiBold"
                                                           Margin="0,0,6,0"/>
                                                <TextBlock Text="{Binding AlbumName}"
                                                           FontSize="11"
                                                           Foreground="#888888"
                                                           MaxWidth="220"
                                                           TextTrimming="CharacterEllipsis"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- Footer Buttons -->
            <StackPanel Grid.Row="4" HorizontalAlignment="Center">
                <!-- Review mode hint -->
                <TextBlock Name="ReviewModeHint"
                           Text="Click any downloaded or skipped game to select a different album"
                           FontSize="11"
                           Foreground="#9E9E9E"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,8"
                           Visibility="Collapsed"/>

                <!-- Music Pause/Play Control -->
                <StackPanel Name="MusicControlPanel" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,12">
                    <Button Name="MusicPausePlayButton"
                            Width="36"
                            Height="36"
                            Click="MusicPausePlayButton_Click"
                            ToolTip="Pause/Resume music playback"
                            Background="#F8BBD9"
                            Foreground="#880E4F"
                            Style="{StaticResource MaterialDesignIconButton}">
                        <materialDesign:PackIcon Name="MusicPausePlayIcon"
                                                 Kind="Pause"
                                                 Width="20"
                                                 Height="20"/>
                    </Button>
                    <TextBlock Name="MusicControlLabel"
                               Text="Pause Music"
                               FontSize="11"
                               Foreground="#F8BBD9"
                               VerticalAlignment="Center"
                               Margin="8,0,0,0"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <!-- Auto-Add More Songs Button (visible only in review mode) -->
                    <Button Name="AutoAddSongsButton"
                            Content="Auto-Add More Songs"
                            Width="180"
                            Height="40"
                            Margin="0,0,12,0"
                            Visibility="Collapsed"
                            Click="AutoAddSongsButton_Click"
                            Background="#7B1FA2"
                            Foreground="White"
                            ToolTip="Automatically add more songs using successful album matches"
                            Style="{StaticResource MaterialDesignRaisedButton}"/>

                    <!-- Review Downloads Button (visible after completion with successes) -->
                    <Button Name="ReviewButton"
                            Content="Review Downloads"
                            Width="160"
                            Height="40"
                            Margin="0,0,12,0"
                            Visibility="Collapsed"
                            Click="ReviewButton_Click"
                            Background="#E67E00"
                            Foreground="White"
                            Style="{StaticResource MaterialDesignRaisedButton}"/>

                    <!-- Cancel/Close/Finish Button -->
                    <Button Name="CancelButton"
                            Content="Cancel"
                            Width="150"
                            Height="40"
                            Click="CancelButton_Click"
                            Style="{StaticResource MaterialDesignRaisedButton}"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
