<UserControl x:Class="UniPlaySong.Views.BatchDownloadProgressDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
             d:DesignHeight="500" d:DesignWidth="700"
             Focusable="True">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <materialDesign:BundledTheme BaseTheme="Dark" PrimaryColor="DeepPurple" SecondaryColor="Lime" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Defaults.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Border Background="#1E1E1E"
            BorderBrush="#424242"
            BorderThickness="2"
            CornerRadius="8"
            Margin="8">
        <Grid Margin="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>  <!-- Title -->
                <RowDefinition Height="Auto"/>  <!-- Overall Progress -->
                <RowDefinition Height="Auto"/>  <!-- Statistics -->
                <RowDefinition Height="*"/>     <!-- Game List -->
                <RowDefinition Height="Auto"/>  <!-- Cancel Button -->
            </Grid.RowDefinitions>

            <!-- Title -->
            <TextBlock Grid.Row="0"
                       Text="Batch Download Progress"
                       FontSize="20"
                       FontWeight="Bold"
                       Margin="0,0,0,16"
                       HorizontalAlignment="Center"
                       Foreground="#2196F3"/>

            <!-- Overall Progress -->
            <StackPanel Grid.Row="1" Margin="0,0,0,16">
                <ProgressBar Name="OverallProgressBar"
                             Minimum="0"
                             Maximum="100"
                             Value="0"
                             Height="30"
                             Margin="0,0,0,8"/>
                <TextBlock Name="OverallProgressText"
                           Text="0 / 0 games"
                           HorizontalAlignment="Center"
                           FontSize="12"
                           Foreground="Gray"/>
            </StackPanel>

            <!-- Statistics -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,16">
                <Border Background="#E8F5E8"
                        BorderBrush="#4CAF50"
                        BorderThickness="1"
                        CornerRadius="4"
                        Padding="12,6"
                        Margin="4">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Check" VerticalAlignment="Center" Foreground="#2E7D32" Margin="0,0,4,0"/>
                        <TextBlock Text="Downloaded: " FontWeight="SemiBold" Foreground="#2E7D32"/>
                        <TextBlock Name="DownloadedCountText" Text="0" FontWeight="Bold" Foreground="#1B5E20"/>
                    </StackPanel>
                </Border>

                <Border Background="#FFF3E0"
                        BorderBrush="#FF9800"
                        BorderThickness="1"
                        CornerRadius="4"
                        Padding="12,6"
                        Margin="4">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="ArrowRightBold" VerticalAlignment="Center" Foreground="#E65100" Margin="0,0,4,0"/>
                        <TextBlock Text="Skipped: " FontWeight="SemiBold" Foreground="#E65100"/>
                        <TextBlock Name="SkippedCountText" Text="0" FontWeight="Bold" Foreground="#BF360C"/>
                    </StackPanel>
                </Border>

                <Border Background="#FFEBEE"
                        BorderBrush="#F44336"
                        BorderThickness="1"
                        CornerRadius="4"
                        Padding="12,6"
                        Margin="4">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Close" VerticalAlignment="Center" Foreground="#C62828" Margin="0,0,4,0"/>
                        <TextBlock Text="Failed: " FontWeight="SemiBold" Foreground="#C62828"/>
                        <TextBlock Name="FailedCountText" Text="0" FontWeight="Bold" Foreground="#B71C1C"/>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- Game List -->
            <Border Grid.Row="3"
                    Background="#252525"
                    BorderBrush="#333333"
                    BorderThickness="1"
                    CornerRadius="4"
                    Margin="0,0,0,16">
                <ScrollViewer VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled">
                    <ItemsControl Name="GamesList">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#2D2D2D"
                                        BorderBrush="#3D3D3D"
                                        BorderThickness="0,0,0,1"
                                        Padding="12,8">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="24"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Status Icon -->
                                        <materialDesign:PackIcon Grid.Column="0"
                                                                 Kind="{Binding StatusIcon}"
                                                                 Foreground="{Binding StatusColor}"
                                                                 VerticalAlignment="Center"
                                                                 Width="20"
                                                                 Height="20"/>

                                        <!-- Game Info -->
                                        <StackPanel Grid.Column="1" Margin="8,0">
                                            <TextBlock Text="{Binding GameName}"
                                                       FontSize="13"
                                                       FontWeight="SemiBold"
                                                       Foreground="White"
                                                       TextTrimming="CharacterEllipsis"/>
                                            <TextBlock Text="{Binding StatusMessage}"
                                                       FontSize="11"
                                                       Foreground="Gray"
                                                       TextTrimming="CharacterEllipsis"/>
                                        </StackPanel>

                                        <!-- Source and Album Name -->
                                        <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding SourceName}"
                                                       FontSize="10"
                                                       Foreground="#64B5F6"
                                                       FontWeight="SemiBold"
                                                       Margin="0,0,6,0"/>
                                            <TextBlock Text="{Binding AlbumName}"
                                                       FontSize="11"
                                                       Foreground="#888888"
                                                       MaxWidth="180"
                                                       TextTrimming="CharacterEllipsis"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Border>

            <!-- Cancel Button -->
            <Button Grid.Row="4"
                    Name="CancelButton"
                    Content="Cancel"
                    Width="150"
                    Height="40"
                    HorizontalAlignment="Center"
                    Click="CancelButton_Click"
                    Style="{StaticResource MaterialDesignRaisedButton}"/>
        </Grid>
    </Border>
</UserControl>
